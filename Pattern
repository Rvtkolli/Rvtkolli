
void main()
{
    int n,i,j;
    char ch='A',ch1='a';
    scanf("%d",&n);
        for(i=1;i<=n;i++)
        {
            for(j=1;j<=i;j++)
            {
                printf("%c%c ",ch,ch1);
                ch++;
                ch1++;
            }
            printf("\n");
        }
    
}

output----
5
Aa 
Bb Cc 
Dd Ee Ff 
Gg Hh Ii Jj 
Kk Ll Mm Nn Oo
